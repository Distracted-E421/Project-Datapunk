# Cursor rules for Datapunk

# Ignore Python virtual environments, Docker build files, and common dependency folders
ignore:
  - "**/__pycache__/"
  - "**/*.pyc"
  - "**/.venv/"
  - "**/venv/"
  - "**/env/"
  - "**/.env.*"
  - "**/.git/"
  - "**/node_modules/"
  - "**/dist/"
  - "**/build/"

# Include all Python files
include:
  - "**/*.py"   

# Include all YAML files
include:
  - "**/*.yaml" # Configuration files

# Include all Docker files
include:
  - "**/*.dockerfile"   

# Include all SQL files
include:
  - "**/*.sql"

# Include all CSV files
include:
  - "**/*.csv"

# Include all JSON files
include:
  - "**/*.json" 

# Include all TXT files
include:
  - "**/*.txt"

# Include all TS files
include:
  - "**/*.ts"   

# Include all Svelte files
include:
  - "**/*.svelte"   

# Include all JS files
include:
  - "**/*.js"   

# Prioritize documentation files for planning and context
include:
  - "docs/**/*.md"
  - "docs/**/*.txt"
  - "docs/**/*.yaml"
  - "docs/**/*.json"
  - "README.md"


